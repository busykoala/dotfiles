[include]
    path = ~/dotfiles/user_specific/.gitconfig_expand
[commit]
    gpgsign = true
[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/dotfiles/.global_gitignore
    hooksPath = ~/dotfiles/.githooks
[branch]
    autosetuprebase = always
[format]
    pretty = %C(blue)%h%Creset %s %C(green)%d%Creset [%C(red)%an%Creset, %C(cyan)%cr%Creset] %C(bold reverse)%N%Creset
[rerere]
    enabled = 0

