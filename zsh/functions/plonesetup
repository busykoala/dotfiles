HIGHLIGHT="*************************"

echo "${HIGHLIGHT}\nActivate venv\n${HIGHLIGHT}"
workon plone_init

echo "${HIGHLIGHT}\nCopy busykoala_buildout.cfg to project\n${HIGHLIGHT}"
cp -f ~/dotfiles/examples/busykoala_buildout.cfg busykoala_buildout.cfg

echo "${HIGHLIGHT}\nSymlink busykoala_buildout.cfg\n${HIGHLIGHT}"
ln -fs busykoala_buildout.cfg buildout.cfg

echo "${HIGHLIGHT}\nBootstrap app\n${HIGHLIGHT}"
python bootstrap.py

echo "${HIGHLIGHT}\nDeactivate venv\n${HIGHLIGHT}"
deactivate

echo "${HIGHLIGHT}\nRun buildout\n${HIGHLIGHT}"
bin/buildout

if [ -d "./parts/real_omelette" ]; then
  echo "${HIGHLIGHT}\nDelete old real_omelette\n${HIGHLIGHT}"
  rm -rf ./parts/real_omelette
fi
if [ -d "./parts/omelette" ]; then
  echo "${HIGHLIGHT}\nAdd new real_omelette\n${HIGHLIGHT}"
  cp -RL ./parts/omelette ./parts/real_omelette
fi
